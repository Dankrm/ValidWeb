{
  "name": "validweb",
  "displayName": "ValidWeb",
  "publisher": "Dankm",
  "description": "",
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:validweb-sidebar",
    "onLanguage:html",
    "onCommand:validweb.generateFileReport",
    "onCommand:validweb.refreshFiles",
    "onCommand:validweb.generateFolderReport"
  ],
  "main": "./dist/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "validweb.refreshFiles",
        "title": "Atualizar",
        "icon": {
          "light": "media/icons/light/refresh.svg",
          "dark": "media/icons/dark/refresh.svg"
        }
      },
      {
        "command": "validweb.generateFileReport",
        "title": "Gerar Relatório"
      },
      {
        "command": "validweb.generateFolderReport",
        "title": "Gerar Relatório do Diretório"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "validweb.refreshFiles",
          "when": "view == validweb-sidebar-tree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "validweb.generateFileReport",
          "when": "view == validweb-sidebar-tree && viewItem == htmlFile"
        },
        {
          "command": "validweb.generateFolderReport",
          "when": "view == validweb-sidebar-tree && viewItem == htmlFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "validweb-sidebar-view",
          "title": "ValidWeb",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "validweb-sidebar-view": [
        {
          "type": "tree",
          "id": "validweb-sidebar-tree",
          "name": "Arquivos",
          "contextualTitle": "Arquivos"
        },
        {
          "type": "webview",
          "id": "validweb-sidebar-ruletypes",
          "name": "Marcadores",
          "contextualTitle": "Marcadores"
        },
        {
          "type": "webview",
          "id": "validweb-sidebar-rules",
          "name": "Regras",
          "contextualTitle": "Regras"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm-run-all -p compile:*",
    "watch": "npm-run-all -p watch:*",
    "compile:extension": "tsc -p ./",
    "compile:views": "webpack --mode production",
    "watch:extension": "tsc -watch -p ./",
    "watch:views": "webpack --watch --mode development",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/jsdom": "^20.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "css-loader": "^6.7.1",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "node": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "update": "^0.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@iamtraction/google-translate": "^2.0.0",
    "@prisma/client": "^4.6.1",
    "axios": "^1.1.3",
    "jsdom": "^20.0.1",
    "pdfkit": "^0.13.0",
    "sqlite3": "^5.1.2",
    "xml2js": "^0.4.23"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
